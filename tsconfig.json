{
  "compilerOptions": {
    "outDir": "./dist/",
    "sourceMap": true,
    "noImplicitAny": true,
    "module": "es6",
    "target": "es5",
    "jsx": "react",
    "allowJs": true,
    "moduleResolution": "node"
  },
  "include": [
    "./**/*.ts",
    "./.eslintrc.js"
  ],
  "exclude": [
    "node_modules",
    "webpack.common.js",
    "webpack.dev.js",
    "webpack.prod.js"
  ]
}
